    <modelVersion>4.0.0</modelVersion>

    <groupId>com.example.tools.xls2conf</groupId>
    <artifactId>javadoc2xls-test</artifactId>
    <version>1.0-SNAPSHOT</version>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <executable>/usr/lib/jvm/java-7-openjdk-amd64/bin/javadoc</executable>
                    <arguments>
                        <argument>-doclet</argument>
                        <argument>com.example.tools.xls2conf.javadoc2xls.Javadoc2XlsDoclet</argument>
                        <argument>-docletpath</argument>
                        <argument>
                            /home/ikeya/.m2/repository/com/example/tools/xls2conf/javadoc2xls/1.0-SNAPSHOT/javadoc2xls-1.0-SNAPSHOT.jar:/home/ikeya/.m2/repository/com/google/guava/guava/12.0/guava-12.0.jar
                        </argument>
                        <argument>-sourcepath</argument>
                        <argument>/home/ikeya/IdeaProjects/xls2conf/javadoc2xls-test/src/test/java</argument>
                        <argument>-private</argument>
                        <argument>-subpackages</argument>
                        <argument>com.example</argument>
                        <argument>-template</argument>
                        <argument>/home/ikeya/IdeaProjects/xls2conf/javadoc2xls-test/report/sheet_01.xls</argument>
                        <argument>-reportdir</argument>
                        <argument>/home/ikeya</argument>
                    </arguments>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <configuration>
                    <doclet>com.example.tools.xls2conf.javadoc2xls.Javadoc2XlsDoclet</doclet>
                    <docletArtifact>
                        <groupId>com.example.tools.xls2conf</groupId>
                        <artifactId>javadoc2xls</artifactId>
                        <version>1.0-SNAPSHOT</version>
                    </docletArtifact>
                    <useStandardDocletOptions>false</useStandardDocletOptions>
                    <!--<sourcepath>${build.testSourceDirectory}</sourcepath>-->
                    <additionalparam>
                        -template ${project.basedir}/report/template/sheet_01.xls
                        -reportdir ${project.basedir}/report/testlist
                        -reportfilename {0}_TestCase({1}).xls
                        -sorttag @no
                        -sheetindex 0
                    </additionalparam>
                </configuration>
                <executions>
                </executions>
            </plugin>
        </plugins>
    </build>
